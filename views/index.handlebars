<h1>Burgers</h1>

<h2></h2>

<ul>
  {{#each burgers}}
    {{#unless }}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each Burgers}}
    {{#if devoured}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>



<li>
	{{name}}

	<button class="move" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if sleep}}move to {{else}}WAKE UP!{{/if}}
	</button>
</li>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>
  <button type="submit">Add burger</button>
</form>