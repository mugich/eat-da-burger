<div class=container>

    
<div>
  <img src="../public/images/burger.png" alt="burger">
</div>

   
 
  <h1 style="color:rgb(170, 63, 63); text-align: center">Eat Da Burger</h1>


  <div class="row">
    <div class="col-6">
      <h2 style="color:white">Burgers as yet undevoured. . .</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>



    <div class="col-6">
      <h2 style="color:white">Burgers that have been DEVOURED.</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>


  

  <form class="create-form">
    <div class="form-group col-3 mx-auto">
        
    <div class="col-12 text-center">
     <textarea class="form-control" id="burger" name="burger_name" rows="2"></textarea>
      <button type="submit" class="btn btn-danger m-2 e-5">Add burger</button>
      <label for="burger" style="color:white">Enter a burger you want to eat</label>

    </div>

     
    </div>
  </form>

</div>